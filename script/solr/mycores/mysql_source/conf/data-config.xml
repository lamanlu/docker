<dataConfig>
    <dataSource type="JdbcDataSource" driver="com.mysql.jdbc.Driver" url="jdbc:mysql://mysql_master/museed_main" user="root" password="Devroot_123"/>
    <document>
        <entity name="city" query="select id, `name` ,name_en, `desc` from mx_city">
            <field column="id" name="id" />
            <field column="name" name="name" />
            <field column="name_en" name="name_en" />
            <field column="desc" name="desc" />
            
            <entity name="country" 
                    query="SELECT id AS country_id,`name`,`en_name`,`desc`,seo_keywords FROM mx_country WHERE country_id = ${city.country_id}">
                <field column="name" name="country_name" />
                <field column="name_en" name="country_name_en" />
                <field column="desc" name="country_desc" />
                <field column="seo_keywords" name="country_kw" />
            </entity>
            
        </entity>
    </document>
</dataConfig>
